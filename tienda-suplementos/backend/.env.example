# Configuración de Base de Datos
MONGODB_URI=mongodb://localhost:27017/tienda-suplementos

# JWT
JWT_SECRET=tu_jwt_secret_muy_secreto_aqui
JWT_EXPIRE=7d

# URLs
FRONTEND_URL=http://localhost:5173
BACKEND_URL=http://localhost:5000

# CORS - Orígenes permitidos (separa múltiples URLs con comas)
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Wompi Gateway (Producción)
WOMPI_PUBLIC_KEY=pub_prod_XXXXXXXXXX
WOMPI_PRIVATE_KEY=prv_prod_XXXXXXXXXX
WOMPI_EVENTS_SECRET=events_XXXXXXXXXX
WOMPI_INTEGRITY_SECRET=prod_integrity_XXXXXXXXXX

# Para pruebas en Sandbox (comentar en producción)
# WOMPI_PUBLIC_KEY=pub_test_XXXXXXXXXX
# WOMPI_PRIVATE_KEY=prv_test_XXXXXXXXXX
# WOMPI_EVENTS_SECRET=test_events_XXXXXXXXXX
# WOMPI_INTEGRITY_SECRET=test_integrity_XXXXXXXXXX

# MercadoPago (Opcional - si quieres usar ambos)
# MERCADOPAGO_ACCESS_TOKEN=tu_access_token_de_mercadopago
# MERCADOPAGO_WEBHOOK_SECRET=tu_webhook_secret_de_mercadopago

# Email Configuration
# Opciones de EMAIL_PROVIDER: gmail, sendgrid, resend, ethereal, custom
# ⚠️ IMPORTANTE: SendGrid es RECOMENDADO para Railway (Gmail puede estar bloqueado)

# Opción 1: SendGrid (RECOMENDADO para producción/Railway)
EMAIL_PROVIDER=sendgrid
SENDGRID_API_KEY=SG.xxxxxxxxxx
EMAIL_FROM=noreply@tudominio.com
EMAIL_FROM_NAME=International Nutrition
EMAIL_REPLY_TO=soporte@tudominio.com
ADMIN_EMAIL=admin@tudominio.com

# Opción 2: Gmail (requiere App Password - puede fallar en Railway)
# EMAIL_PROVIDER=gmail
# EMAIL_USER=tu_email@gmail.com
# EMAIL_PASS=tu_app_password_de_16_caracteres
# EMAIL_FROM="Tienda Suplementos <tu_email@gmail.com>"
# ADMIN_EMAIL=tu_email@gmail.com

# Opción 3: Resend (alternativa HTTP API)
# EMAIL_PROVIDER=resend
# RESEND_API_KEY=re_xxxxxxxxxxxxx
# EMAIL_FROM=noreply@tudominio.com

# Opción 4: Custom SMTP
# EMAIL_PROVIDER=custom
# EMAIL_HOST=smtp.example.com
# EMAIL_PORT=587
# EMAIL_SECURE=false
# EMAIL_USER=tu_email@example.com
# EMAIL_PASS=tu_password

# Para desarrollo
NODE_ENV=development
TEST_EMAIL=email_de_prueba@gmail.com

# Puerto del servidor
PORT=5000